              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left",
          "label": "Text Align"
        },
        {
          "type": "header",
          "content": "CUSTOM STYLING"
        },
        {
          "type":"checkbox",
          "id":"text_custom_styling",
          "label":"Use Custon Styling",
          "default":false
        },
        {
          "type":"color",
          "id":"text_color",
          "label":"Text Color",
          "default":"#000000"
        },
        {
          "type": "range",
          "id": "text_letter_spacing",
          "min": 0,
          "max": 15,
          "step": 0.5,
          "unit": "px",
          "label": "Letter Spacing",
          "default": 1
        },
        {
          "type": "header",
